 
  <% if @product.errors.full_messages.any? %>
         <div class="alert alert-error">
         <p><strong>Please fix the following input Errors: </strong></p>
            <% @product.errors.full_messages.each do |error_message| %>
            <li> <%= error_message %></li>
            <% end %>
         </div> 
     <% end %>

<!-- BEGIN FORM-->
<%= form_for(:product, :url => {:controller => 'products', :action => @action }, :html=> { class: 'form-horizontal', :multipart => true }) do |f| %>
                         

                
            <% if @action == "update"  %>   
              <%= hidden_field_tag "id", @product.id %>   
            <% end %> 
                           <div class="control-group">
                              <label class="control-label"> Name <font color="red">*</font></label>
                              <div class="controls">                                 
                                  <%= f.text_field :name, :class => 'medium span6 m-wrap' %>
                                 <span class="help-inline"></span>
                              </div>
                           </div>

                           <div class="control-group">
                              <label class="control-label">Artist <font color="red">*</font></label>
                              <div class="controls">                                
                              <%= f.text_field :artist, :class => 'medium span6 m-wrap' %>
                                 <span class="help-inline"></span>
                              </div>
                           </div>
                           <div class="control-group">
                              <label class="control-label">Price <font color="red">*</font></label>
                              <div class="controls">
                                 <%= f.text_field :price, :class => 'medium span6 m-wrap' %>
                                 <span class="help-inline"></span>
                              </div>
                           </div>
                           <div class="control-group">
                              <label class="control-label">Height <font color="red">*</font></label>                              
                              <div class="controls">                            
                                   <%= f.text_field :height, :class => 'medium span6 m-wrap' %>
                                 <span class="help-inline"></span>
                              </div>
                           </div>
                           <div class="control-group">
                              <label class="control-label">Weight <font color="red">*</font></label>                              
                              <div class="controls">                            
                                   <%= f.text_field :weight, :class => 'medium span6 m-wrap' %>
                                 <span class="help-inline"></span>
                              </div>
                           </div>
                           <div class="control-group">
                              <label class="control-label">Stem <font color="red">*</font></label>                              
                              <div class="controls">                            
                                   <%= f.text_field :stem, :class => 'medium span6 m-wrap' %>
                                 <span class="help-inline"></span>
                              </div>
                           </div>
                           <div class="control-group">
                              <label class="control-label">Description <font color="red">*</font></label>
                              <div class="controls">
                                <%= f.text_area :description, :rows => "6", :class => 'span12 ckeditor m-wrap' %>                               
                                 <span class="help-inline"></span>
                              </div>
                           </div>

                           <div class="control-group">
                              <label class="control-label">Image <font color="red">*</font></label>
                              <div class="controls">
                                 <%= f.file_field :p_image %>
                              <%
                              if @action == "update"
                              %>
                              <span class="help-inline"><%= image_tag("uploads/products/" + @product.p_image, height: '100', width: '100') %>
                            <% end %>
                                </span>
                              </div>
                           </div>    
                           
                           <div class="form-actions">
                              <%= f.submit :Save, :class=> 'btn blue'  %>                                
                              <%= link_to "Cancel", admin_products_index_path, :class => "btn"  %>
									 
							          
                           </div>
                        <% end %>
                        <!-- END FORM--> 
                       
                      
      